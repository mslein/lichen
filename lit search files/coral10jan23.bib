@article{ WOS:000311535500019,
Author = {Cumbo, V. R. and Fan, T. -Y. and Edmunds, P. J.},
Title = {Physiological development of brooded larvae from two pocilloporid corals
   in Taiwan},
Journal = {MARINE BIOLOGY},
Year = {2012},
Volume = {159},
Number = {12},
Pages = {2853-2866},
Month = {DEC},
Abstract = {In southern Taiwan, brooded larvae of Pocillopora damicornis and
   Seriatopora caliendrum are released year-round in synchrony with new
