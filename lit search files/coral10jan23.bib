@article{ WOS:000255203600001,
Author = {Omata, Tamano and Suzuki, Atsushi and Sato, Takanori and Minoshima, Kayo
   and Nomaru, Eriko and Murakami, Akio and Murayama, Shohei and Kawahata,
   Hodaka and Maruyama, Tadashi},
Title = {Effect of photosynthetic light dosage on carbon isotope composition in
   the coral skeleton: Long-term culture of Porites spp.},
Journal = {JOURNAL OF GEOPHYSICAL RESEARCH-BIOGEOSCIENCES},
Year = {2008},
Volume = {113},
Number = {G2},
Month = {APR 19},
Abstract = {Whereas the oxygen isotope ratio of the coral skeleton is used for
   reconstruction of past information on seawater, the carbon isotope ratio
   is considered a proxy for physiological processes, principally
   photosynthesis and respiration. However, the fractionation of carbon
   isotopes in biogenic carbonate such as coral skeleton is still unclear.
   We conducted a long-term culture experiment of Porites spp. corals at
   different light dosages ( light intensity, 100, 300, or 500 mu mol m(-2)
   s(-1); daily light period, 10 or 12 h) at 25 +/- 0.6 degrees C to
   examine the contribution of photosynthetic activity to skeletal carbon
   isotope composition. Corals were grown in sand-filtered seawater and not
   fed; thus, they subsisted from photosynthesis of symbiotic algae. As the
   daily dose of photosynthetically active radiation increased, the rate of
   annual extension also increased. Mean isotope compositions shifted; the
   carbon isotope compositions (delta C-13) became heavier and the oxygen
   isotope compositions ( delta O-18) became lighter at higher radiation
   dose. Skeletal delta O-18 decrease coincided with increasing skeletal
   growth rate, indicating the influence of so-called kinetic isotope
   effects. The observed delta C-13 increase should be subject to both
   kinetic and metabolic isotope effects, with the latter reflecting
   skeletal delta C-13 enrichment due to photosynthesis by symbiotic algae.
   Using a vector approach in the delta C-13 - delta O-18 plane, we
   discriminated between kinetic and metabolic isotope effects on delta
   C-13. The calculated delta C-13 changes from metabolic isotope effects
   were light dose dependent. The delta C-13 fractionation curve related to
   metabolic isotope effects is very similar to the photosynthesis -
   irradiance curve, indicating the direct contribution of photosynthetic
   activity to metabolic isotope effects. In contrast, delta C-13
   fractionation related to kinetic isotope effects gradually increased as
   the growth rate increased. Our experiment demonstrated that the kinetic
   and metabolic isotope effects in coral skeleton were successfully
   differentiated.},
