@article{ WOS:000350559400006,
Author = {Carvalho, Matheus C. and Santos, Isaac R. and Maher, Damien T. and
   Cyronak, Tyler and McMahon, Ashly and Schulz, Kai G. and Eyre, Bradley
   D.},
Title = {Drivers of carbon isotopic fractionation in a coral reef lagoon:
   Predominance of demand over supply},
Journal = {GEOCHIMICA ET COSMOCHIMICA ACTA},
Year = {2015},
Volume = {153},
Pages = {105-115},
Month = {MAR 15},
Abstract = {The carbon isotopic signature (delta C-13) of coral skeletons is
   influenced by isotopic fractionation (epsilon(org)) during
   photosynthetic dissolved inorganic carbon (DIC) fixation, but only a few
   direct epsilon(org) measurements are available in coral communities. In
   particular, observations of epsilon(org) at the ecosystem scale are
   lacking. Here we present high frequency (hourly) measurements of DIC and
   its delta C-13 in the water column and benthic chambers in a highly
   productive coral reef lagoon (Heron Island, Great Barrier Reef,
   Australia) and apply simple molar balance calculations to infer
   community epsilon(org). Variation in epsilon(org) was between 3.7 parts
   per thousand and 25.2 parts per thousand in the open lagoon, with lower
   values during the mid-afternoon and higher values in early morning and
   evening. The epsilon(org) range was broader (0.3-30.1 parts per
   thousand) in enclosed benthic chambers with a similar diel pattern.
   There was a strong correlation between carbon uptake rates and
   epsilon(org) in closed incubations, suggesting that C demand largely
   controlled epsilon(org). Benthic chamber incubations revealed increased
   epsilon(org) as water circulation increased, implying that C supply to
   photosynthesizing algae on the sediment also influenced epsilon(org).
   Hysteresis in carbon uptake through the day complicated the expected
   straightforward influence of irradiance on C demand, and consequently on
   epsilon(org). These results highlight the need for more in depth
   understanding on carbon uptake rates to fully understand delta C-13
   variation in coral paleo-records. (C) 2015 Elsevier Ltd. All rights
   reserved.},
