@article{ WOS:000512766500029,
Author = {Guo, Yangrui and Deng, Wenfeng and Wei, Gangjian and Xiao, Hangfang and
   Chen, Xuefei},
Title = {Metabolic significance of temperature-dependent changes in annual
   resolution coral delta C-13 from the South China Sea during the
   mid-Holocene},
Journal = {REGIONAL STUDIES IN MARINE SCIENCE},
Year = {2020},
Volume = {33},
Month = {JAN},
Abstract = {The complicated effects of climatic and environmental conditions on
   coral delta C-13 have hindered its use as a universal proxy for
   biological activity and climate change. Changes in annual resolution
   delta C-13 levels from the South China Sea (SCS) were studied to explore
   the biological and climatic significance of coral delta C-13 during the
   mid-Holocene. The growth-rate-related kinetic isotope effect on modern
   coral delta C-13 may be limited, site- and/or colony-specific.
   Furthermore, coral delta C-13 and sea surface temperatures (SST) are
   inversely related, but their correlation is weak. These results suggest
   the influence of complicated controlling factors on modern coral delta
   C-13. As for the mid-Holocene corals, no obvious growth-rate-related
   kinetic isotope effect has been found in their coral delta C-13 series,
   and the effect of solar irradiation on coral delta C-13 is difficult to
   directly evaluate for the low resolution of reconstructed solar records
   and the dating errors. However, mid-Holocene coral delta C-13 series
   show temperature-dependent changes over the studied periods during
   6100-6500 yr BP. The significant negative correlation between coral
   delta C-13 and SST has been attributed to the high SSTs during the
   mid-Holocene. This is based on the observation that coral delta C-13 and
   the photosynthesis to respiration ratio (P/R) are usually positively
   related, but P/R is significantly and negatively related to temperature
   under high temperature conditions in that photosynthetic activity of
   heat-stressed corals will drastically reduce due to the decreases of
   population density and photosynthetic rate of the zooxanthellae. (C)
   2019 Elsevier B.V. All rights reserved.},
DOI = {10.1016/j.rsma.2019.100950},
Article-Number = {100950},
