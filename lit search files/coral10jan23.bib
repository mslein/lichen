@article{ WOS:000826219600013,
Author = {Sawall, Yvonne and Nicosia, Anna M. and McLaughlin, Kathryn and Ito,
   Maysa},
Title = {Physiological responses and adjustments of corals to strong seasonal
   temperature variations (20-28 degrees C)},
Journal = {JOURNAL OF EXPERIMENTAL BIOLOGY},
Year = {2022},
Volume = {225},
Number = {13},
Month = {JUL},
Abstract = {Temperature is a key driver of metabolic rates. So far, we know little
   about potential physiological adjustments of subtropical corals to
   seasonal temperature changes (>8 degrees C) that substantially exceed
   temperature fluctuation experienced by their counterparts in the
   tropics. This study investigated the effect of temperature reductions on
   Montastraea cavemosa and Ponies astreoides in Bermuda (32 degrees N; sea
   surface temperature similar to 19-29 degrees C) over 5 weeks, applying
   the following treatments: (i) constant control temperature at 28 degrees
   C, and (ii) temperature reduction (0.5 degrees C day(-1)) followed by
   constant temperature (20 days; acclimatization period) at 24 degrees C
   and (iii) at 20 degrees C. Both species decreased photosynthesis and
   respiration during temperature reduction as expected, which continued to
   decrease during the acclimatization period, indicating adjustment to a
   low energy turnover rather than thermal compensation. Trajectories of
   physiological adjustments and level of thermal compensation, however,
   differed between species. Montastraea cavemosa zooxanthellae metrics
   showed a strong initial response to temperature reduction, followed by a
   return to close to control values during the acclimatization period,
   reflecting a high physiological flexibility and low thermal
   compensation. Ponies astreoides zooxanthellae, in contrast, showed no
   initial response, but an increase in pigment concentration per
   zooxanthellae and similar photosynthesis rates at 24 degrees C and 20
   degrees C at the end of the experiment, indicating low acute thermal
   sensitivity and the ability for thermal compensation at the lowest
   temperature. Respiration decreased more strongly than photosynthesis,
   leading to significant build-up of biomass in both species (energy
   reserves). Results are important in the light of potential poleward
   migration of corals and of potential latitudinal and species-specific
   differences in coral thermal tolerance.},
DOI = {10.1242/jeb.244196},
Article-Number = {jeb244196},
