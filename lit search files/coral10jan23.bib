@article{ WOS:000174158300003,
Author = {Yentsch, CS and Yentsch, CM and Cullen, JJ and Lapointe, B and Phinney,
   DA and Yentsch, SW},
Title = {Sunlight and water transparency: cornerstones in coral research},
