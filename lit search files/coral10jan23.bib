@article{ WOS:000525342600004,
Author = {Ohtake, Masahiro and Natori, Noriaki and Sugai, Youta and Tsuchiya,
   Kenji and Aketo, Tsuyoshi and Nishihara, Gregory N. and Toda, Tatsuki},
Title = {Growth and nutrient uptake characteristics of Sargassum macrocarpum
   cultivated with phosphorus-replete wastewater},
Journal = {AQUATIC BOTANY},
Year = {2020},
Volume = {163},
Month = {APR},
Abstract = {The specific growth rate of a brown alga, Sargassum macrocarpum, was
   evaluated by supplying bio-filtered wastewater (BFW) and synthetic
   nutrient medium (SNM) adjusted to the same nutrient concentration as
   BFW. The nutrient uptake characteristics were examined under various
   temperature conditions. The growth rates in the 0.5\% and 5.0\% (v/v)
   BFW treatments (0.015-0.025 wet weight day(-1)) were approximately the
