}

@inproceedings{ WOS:A1997BJ19L00005,
Author = {RahimpourBonab, H and Bone, Y and MoussaviHarami, R and Turnbull, K},
Editor = {James, NP and Clarke, JAD},
Title = {Geochemical comparisons of modern cool-water calcareous biota, Lacepede
