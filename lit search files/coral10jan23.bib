@article{ WOS:000433572100006,
Author = {Wilson, Jesse M. and Litvin, Steven Y. and Beman, J. Michael},
Title = {Microbial community networks associated with variations in community
   respiration rates during upwelling in nearshore Monterey Bay, California},
Journal = {ENVIRONMENTAL MICROBIOLOGY REPORTS},
Year = {2018},
Volume = {10},
Number = {3},
Pages = {272-282},
Month = {JUN},
Abstract = {Respiration of organic material is a central process in the global
   carbon (C) cycle catalysed by diverse microbial communities. In the
   coastal ocean, upwelling can drive variation in both community
   respiration (CR) and the microbial community, but linkages between the
   two are not well-understood. We measured CR rates and analysed microbial
   dynamics via 16S rRNA gene sequencing, to assess whether CR correlated
   with upwelling irrespective of changes in the microbial community, or if
   the particular microbial community present was a factor in explaining
   variations in CR. CR varied significantly over time as a function of
   temperature, dissolved oxygen (DO) and chlorophyllall of which are
